//applies spl in clab--thanks go to subtledoctor
    COPY ~%mod_folder%/class/priest/turn/B_CHTN1.spl~  ~override~
//eff
    COPY ~%mod_folder%/class/priest/turn/B_CHTN1.eff~  ~override~

    //B_CHTN2.spl applies cha based bonuses
    COPY ~%mod_folder%/class/priest/turn/B_CHTN2.spl~  ~override~
         LPF ALTER_EFFECT INT_VAR match_opcode = 326 match_parameter1 = 18 parameter2 = %cha_eq% STR_VAR END  //+1 turn
         LPF ALTER_EFFECT INT_VAR match_opcode = 326 match_parameter1 = 19 parameter2 = %cha_eq% STR_VAR END  //+1 turn
         LPF ALTER_EFFECT INT_VAR match_opcode = 326 match_parameter1 = 20 parameter2 = %cha_eq% STR_VAR END  //+2 turn
         LPF ALTER_EFFECT INT_VAR match_opcode = 326 match_parameter1 = 21 parameter2 = %cha_eq% STR_VAR END  //+2 turn
         LPF ALTER_EFFECT INT_VAR match_opcode = 326 match_parameter1 = 22 parameter2 = %cha_eq% STR_VAR END  //+2 turn
         LPF ALTER_EFFECT INT_VAR match_opcode = 326 match_parameter1 = 23 parameter2 = %cha_gr% STR_VAR END  //+3 turn
    //B_CHTB1 Cha 18, +1 turn
    COPY ~%mod_folder%/class/priest/turn/B_CHTB1.spl~  ~override~

    //B_CHTB2 Cha 19-20 +2 turn
    COPY ~%mod_folder%/class/priest/turn/B_CHTB2.spl~  ~override~

    //B_CHTB3 Cha 21+ +3 turn
    COPY ~%mod_folder%/class/priest/turn/B_CHTB3.spl~  ~override~

